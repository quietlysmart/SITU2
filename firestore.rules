rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Admins are identified via a custom claim `admin: true`
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }
    
    match /users/{userId} {
      // Read: owner or admin
      allow read: if isOwner(userId) || isAdmin();
      
      // Client creation is handled by backend auth trigger
      allow create: if false;
      
      // Allow limited updates by owner; admins can update as needed
      allow update: if (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'email']))
                    || isAdmin();
      
      // Never allow delete from client
      allow delete: if false;
      
      // Subcollections - user owns their own data
      match /artworks/{artworkId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      
      match /mockups/{mockupId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Guest sessions - backend only (no client access)
    match /guest_sessions/{sessionId} {
      allow read, write: if false;
    }
    
    // Guest mockups - legacy, backend only
    match /guest_mockups/{mockupId} {
      allow read, write: if false;
    }
    
    // Credit adjustments - admin audit log, backend only
    match /creditAdjustments/{adjustmentId} {
      allow read, write: if false;
    }
  }
}
